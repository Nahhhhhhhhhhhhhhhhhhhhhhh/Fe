-- Toggle UI Button (Zen Fe)
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "ZenFeScreen"

local toggleButton = Instance.new("TextButton")
toggleButton.Name = "ZenFeToggle"
toggleButton.Parent = ScreenGui
toggleButton.BackgroundColor3 = Color3.fromRGB(90, 0, 0)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Text = "Zen Fe"
toggleButton.Size = UDim2.new(0, 100, 0, 40)
toggleButton.Position = UDim2.new(0, 10, 0.5, -20)
toggleButton.Visible = false
toggleButton.ZIndex = 999
toggleButton.Active = true
toggleButton.Draggable = true

-- UI Frame (top X button)
local ui = game.CoreGui:FindFirstChild("Kavo")
if ui then
    local closeButton = Instance.new("TextButton")
    closeButton.Name = "CloseZen"
    closeButton.Parent = ui
    closeButton.Text = "X"
    closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    closeButton.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
    closeButton.Size = UDim2.new(0, 30, 0, 30)
    closeButton.Position = UDim2.new(1, -35, 0, 5)
    closeButton.ZIndex = 999
    closeButton.Active = true
    closeButton.Draggable = false

    closeButton.MouseButton1Click:Connect(function()
        ui.Enabled = false
        toggleButton.Visible = true
    end)

    toggleButton.MouseButton1Click:Connect(function()
        ui.Enabled = true
        toggleButton.Visible = false
    end)
end
