-- Create UI
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "HubertHub"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 300, 0, 500)
Frame.Position = UDim2.new(0, 20, 0.5, -250)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BorderSizePixel = 2
Frame.Active = true
Frame.Draggable = true

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Frame)
Title.Text = "Hubert Hub V1"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 22

local TabList = {
    ["FD Scripts"] = {
        {"Grab Knife V1", "https://pastebin.com/raw/SSAzNj10"},
        {"Grab Knife V2", "https://pastebin.com/raw/Bw7aWTBL"},
        {"Grab Knife V3", "https://pastebin.com/raw/frHvA27v"},
        {"Grab Knife V4", "https://pastebin.com/raw/ANs9UDrn"},
        {"Coolkid V4", "rbxassetid://157645868"},
        {"Coolkid V3", "rbxassetid://142756431"},
        {"Ro-Xploit 4.0", "rbxassetid://175137115"},
        {"Ro-Xploit 5.0", "rbxassetid://288646117"},
        {"Ro-Xploit 6.0", "https://pastebin.com/raw/qqgpugGF"},
        {"Lua Hammer", "https://pastebin.com/raw/RKY5fTXh"},
        {"Dev-Uzi", "https://pastebin.com/raw/X2n20xqM"},
        {"T0PK3K 4.0", "https://raw.githubusercontent.com/LuaGunsX/LuasLegacyScripts/main/%5BGUI%5D%20T0PK3K%20V4"},
    },
    ["Game Scripts"] = {
        {"Virgo V3", "https://pastebin.com/raw/EwYDRD4Y"},
        {"Apoc Tools V4", "https://pastebin.com/raw/0de4tAtR"},
    }
}

local function createTab(tabName, offsetY)
    local tabLabel = Instance.new("TextLabel", Frame)
    tabLabel.Size = UDim2.new(1, 0, 0, 30)
    tabLabel.Position = UDim2.new(0, 0, 0, offsetY)
    tabLabel.Text = tabName
    tabLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    tabLabel.Font = Enum.Font.SourceSansBold
    tabLabel.TextSize = 18
    tabLabel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

    offsetY = offsetY + 30

    for _, scriptData in pairs(TabList[tabName]) do
        local btn = Instance.new("TextButton", Frame)
        btn.Size = UDim2.new(1, -10, 0, 25)
        btn.Position = UDim2.new(0, 5, 0, offsetY)
        btn.Text = scriptData[1]
        btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.Font = Enum.Font.SourceSans
        btn.TextSize = 16
        btn.MouseButton1Click:Connect(function()
            local src = scriptData[2]
            if string.find(src, "rbxassetid://") then
                loadstring(game:GetObjects(src)[1].Source)()
            else
                loadstring(game:HttpGet(src))()
            end
        end)
        offsetY = offsetY + 30
    end
end

-- Add Tabs and Buttons
local startY = 50
for tab, _ in pairs(TabList) do
    createTab(tab, startY)
    startY = startY + (#TabList[tab] + 1) * 30
end

-- RemoteEvent to handle Titan transformation
local RemoteEvent = Instance.new("RemoteEvent", game.ReplicatedStorage)
RemoteEvent.Name = "TitanTransformEvent"

-- LocalScript for Titan Transform (Client-Side)
local function transformToTitan(player)
    -- Change the player's size to simulate Titan form (Scaling)
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    
    humanoid.Health = humanoid.Health + 1000  -- Adding extra health (example)
    character:SetPrimaryPartCFrame(character.PrimaryPart.CFrame * CFrame.new(0, 10, 0))  -- Raise the character to simulate size change
    humanoid.HipWidth = 10  -- Increase width for Titan look
    humanoid.HipHeight = 10  -- Increase height for Titan look
    
    -- Add visual effects (Optional)
    local titanEffect = Instance.new("ParticleEmitter")
    titanEffect.Parent = character:FindFirstChild("Head")
    titanEffect.Texture = "rbxassetid://exampleTextureID"  -- Use a particle texture for visual effect
    titanEffect:Emit(100)
end

RemoteEvent.OnServerEvent:Connect(function(player)
    -- Broadcast the Titan Transformation to other players
    for _, plr in pairs(game.Players:GetPlayers()) do
        if plr ~= player then
            RemoteEvent:FireClient(plr, player)  -- Send transformation info to other clients
        end
    end
end)

-- LocalScript on each client to trigger the transformation visually
game.ReplicatedStorage.TitanTransformEvent.OnClientEvent:Connect(function(player)
    transformToTitan(player)
end)
